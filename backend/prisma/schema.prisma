generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSchema {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  fullname       String
  password       String
  profilePicture String   @default("")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  sentMessages     MessageSchema[] @relation("SentMessages")
  receivedMessages MessageSchema[] @relation("ReceivedMessages")
}

model MessageSchema {
  id Int @id @default(autoincrement())

  senderId   Int
  sender     UserSchema @relation("SentMessages", fields: [senderId], references: [id])
  receiverId Int
  receiver   UserSchema @relation("ReceivedMessages", fields: [receiverId], references: [id])

  text  String
  image String

  createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
}
